<%layout('layouts/boilerplate')%>
<div id="cluster-map" ></div>     
<h1>All gyms</h1>
     <div>
         <a href="gyms/new">New Gym</a>
     </div>
         <% for (let gym of gyms) {%>
        <div class="card mb-3">
            <div class="row">
            <div class="col-md-4">
                <% if(gym.images.length){%>
                <img class="img-fluid" src="<%=gym.images[0].url%>">
                <% } else{ %>
                <img src="https://res.cloudinary.com/dhananjayjaju/image/upload/v1643866332/FindAGym/pexels-victor-freitas-841130_cud1c8.jpg" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= gym.title%></h5>
                    <p class="card-text"><%= gym.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%= gym.location%></small>
                    </p>
                    <a class="btn btn-primary" href="gyms/<%= gym._id%>">View <%= gym.title%></a>
                </div>
            </div>
        </div>
        </div>
        <% }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const gyms = {features: <%- JSON.stringify(gyms) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>
