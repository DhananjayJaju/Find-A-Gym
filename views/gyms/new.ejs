<%layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Gym</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/gyms" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" id="title" name="gym[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" class="form-control" id="title" name="gym[location]" required>
            </div>
            <label class="form-label" for="price">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="price">â‚¹</span>
                <input type="text" class="form-control" for="price" name="gym[price]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea type="text" class="form-control" id="image" name="gym[description]" required></textarea>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Add Gym</button>
            </div>
            <div><a href="/gyms">All gyms</a></div>
        </form>
    </div>
</div>

